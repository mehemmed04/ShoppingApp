                    Shop
                </TextBlock>

                <Image Source="Images/storelogo.png"
                        VerticalAlignment="Center"
                        HorizontalAlignment="Center"
                       Grid.Column="3"
                       >

                </Image>

                <Image  Grid.Column="5"
                        Source="Images/flag.png"
                        Margin="3">

                </Image>

                <TextBlock  Grid.Column="6"
                           VerticalAlignment="Center"
                           FontSize="14"
                           FontWeight="ExtraBold">
                    AZ
                </TextBlock>

                <Image  Grid.Column="7"
                        Source="Images/profpicture.png">

                </Image>

            </Grid>
            <Grid Grid.Row="2">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.8*"/>
                    <ColumnDefinition Width="30"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Horizontal">

                    <Border CornerRadius="20"
                            Background="Black"
                            Margin="10,5"
                            Padding="20,5">
                        <Button 
                                FontSize="15"
                                BorderThickness="0"
                                Background="Transparent"
                                Foreground="White"
                                FontWeight="Bold"
                                Style="{StaticResource MyButton}"
                                >
                            All brands
                        </Button>
                    </Border>

                    <Border CornerRadius="20"
                            Background="White"
                            Margin="10,5"
                            Padding="20,5">
                        <Button FontSize="15"
                                BorderThickness="0"
                                Background="Transparent"
                                Foreground="#919ca1"
                                FontWeight="Bold"
                                Style="{StaticResource MyButton}"
                                >
                            Federal Bikes
                        </Button>
                    </Border>

                    <Border CornerRadius="20"
                            Background="White"
                            Margin="10,5"
                            Padding="20,5">
                        <Button FontSize="15"
                                BorderThickness="0"
                                Background="Transparent"
                                Foreground="#919ca1"
                                FontWeight="Bold"
                                Style="{StaticResource MyButton}"
                                >
                            Odyssey
                        </Button>

                    </Border>
                    <Border CornerRadius="20"
                            Background="White"
                            Margin="10,5"
                            Padding="20,5">
                        <Button FontSize="15"
                                BorderThickness="0"
                                Background="Transparent"
                                Foreground="#919ca1"
                                FontWeight="Bold"
                                Style="{StaticResource MyButton}"
                                >
                            Subrosa
                        </Button>
                    </Border>

                    <Border CornerRadius="20"
                            Background="White"
                            Margin="10,5"
                            Padding="20,5">
                        <Button FontSize="15"
                                BorderThickness="0"
                                Background="Transparent"
                                Foreground="#919ca1"
                                FontWeight="Bold"
                                Style="{StaticResource MyButton}"
                                >
                            Cult
                        </Button>
                    </Border>

                    <Image Source="Images/dots.png"
                           Width="20"
                           Margin="0,8">

                    </Image>

                </StackPanel>

                <Grid Grid.Column="2">



                    <Border CornerRadius="20"
                            Background="White"
                            Margin="5,5,10,5"
                            >
                        <Grid >
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="40"/>
                            </Grid.ColumnDefinitions>

                            <TextBox Margin="15,5,5,5"
                                     BorderThickness="0"
                                     VerticalContentAlignment="Center"
                                     FontSize="15"
                                     FontWeight="Light"
                                     Foreground="#919ca1"
                                     >
                                Search

                            </TextBox>
                            <Image Source="Images/search.png"
                                   Width="30"
                                   Margin="0,5,5,5"
                                   Grid.Column="1">

                            </Image>
                        </Grid>
                    </Border>

                </Grid>

            </Grid>

            <Grid Grid.Row="4">

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="6*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical"
                            >
                    <TextBlock Margin="20,10"
                               Foreground="Black"
                               FontSize="18"
                               FontWeight="ExtraBold">
                        Products
                    </TextBlock>

                    <TextBlock Margin="20,5"
                               Foreground="Black"
                               FontSize="18"
                               FontWeight="Bold">
                        All
                    </TextBlock>

                    <TextBlock Margin="20,5"
                               Foreground="#919ca1"
                               FontSize="18"
                               FontWeight="Normal">
                        Bikes
                    </TextBlock>

                    <TextBlock Margin="20,5"
                               Foreground="#919ca1"
                               FontSize="18"
                               FontWeight="Normal">
                        Wheels
                    </TextBlock>
                    <TextBlock Margin="20,5"
                               Foreground="#919ca1"
                               FontSize="18"
                               FontWeight="Normal">
                        Steering
                    </TextBlock>
                    <TextBlock Margin="20,5"
                               Foreground="#919ca1"
                               FontSize="18"
                               FontWeight="Normal">
                        Clothing
                    </TextBlock>
                    <TextBlock Margin="20,5"
                               Foreground="#919ca1"
                               FontSize="18"
                               FontWeight="Normal">
                        Drivechain
                    </TextBlock>
                    <TextBlock Margin="20,5"
                               Foreground="#919ca1"
                               FontSize="18"
                               FontWeight="Normal">
                        Misc
                    </TextBlock>
                    <TextBlock Margin="20,5"
                               Foreground="#919ca1"
                               FontSize="18"
                               FontWeight="Normal">
                        Seating
                    </TextBlock>
                    <TextBlock Margin="20,5"
                               Foreground="#919ca1"
                               FontSize="18"
                               FontWeight="Normal">
                        Sale
                    </TextBlock>

                </StackPanel>

                <Grid Grid.Column="1">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="2*"/>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="2.4*"/>
                            <ColumnDefinition Width="30"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="0"
                                CornerRadius="20"
                                Margin="0,5"
                                >

                            <Border.Background
                               >
                                <ImageBrush ImageSource="Images/image1.png">

                                </ImageBrush>
                            </Border.Background>
                        </Border>

                        <Border Grid.Column="2"
                                CornerRadius="20"
                                Background="White"
                                Margin="0,5">

                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="3*"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <Border CornerRadius="20"
                                        Margin="20,5">

                                    <Border.Background>
                                        <ImageBrush ImageSource="Images/motorbike.jpg">
                                            
