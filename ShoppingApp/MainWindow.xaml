                <Button Width="30"
                        Height="20"
                        BorderThickness="0"
                        Background="Transparent"
                        Name="CloseBtn"
                        Click="CloseBtn_Click"
                        Style="{StaticResource MyButton}">
                    <Image Source="Images/close.png"/>
                </Button>
            </StackPanel>

            <Grid Grid.Row="1"  >

