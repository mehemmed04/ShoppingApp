                        </Border>
                    </DataTemplate>

                </ListView.ItemTemplate>

                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>



            </ListView>
        </StackPanel>
    </Grid>

    </Grid>

    </Grid>

    </Grid>

    </Border>
</Window>
